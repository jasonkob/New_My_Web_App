@model WebApplication1.Models.Post
@{
    ViewData["Title"] = "Create Post";
}
@section Styles {
    <link rel="stylesheet" href="~/css/CreatorPost.css" />
}
<div class="post-form">
    <h1>Post to Find Friends</h1>
    <form method="post" asp-controller="Post" asp-action="CreatePost">
        
        <label asp-for="Post_img"></label>
        <input asp-for="Post_img" />

        <label for="Post_name">Name:</label>
        <input type="text" id="Post_name" asp-for="Post_name" required />

        <label for="Location">Location:</label>
        <select asp-for="Location" id="Location" required>
            <option value="Luck and Roll">Luck and Roll</option>
            <option value="KUMO cafe & board game">KUMO cafe & board game</option>
            <option value="KMITL Lifelong Learning Center">KMITL Lifelong Learning Center</option>
        </select>

        <label for="Capacity">Number of People:</label>
        <input type="number" id="Capacity" asp-for="Capacity" required />

        <label for="Post_Detail">เพิ่มเติม:</label>
        <textarea id="Post_Detail" asp-for="Post_Detail"></textarea>

        <label for="Data">Date & Time:</label>
        <input type="datetime-local" id="Date" asp-for="Date" required />

        <div class="form-buttons">
            <button type="submit" class="submit-btn">Post</button>
            <button type="reset" class="cancel-btn">Cancel</button>
        </div>

    </form>
</div>
